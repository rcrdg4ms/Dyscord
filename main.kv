#: include kvfiles/windowborder.kv
#: include kvfiles/groups.kv
#: include kvfiles/channels.kv

<Interface>:
    canvas.before:
        Color:
            rgb: 30/255, 31/255, 34/255
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        pos: (root.pos[0], root.pos[1]-22)


        Widget:
            size_hint_x: None
            width: 72
                    
        Label:
            canvas.before:
                Color:
                    rgb: 43/255, 45/255, 49/255
                RoundedRectangle:
                    radius: [(45/4, 45/4), (0,0), (0,0), (0,0)]
                    pos: self.pos
                    size: self.size

            text: 'Channels'
            size_hint_x: None
            width: 240
        
        Label:
            canvas.before:
                Color:
                    rgb: 49/255, 51/255, 56/255
                Rectangle:
                    pos: self.pos
                    size: self.size

            text: 'Chat'


    FloatLayout:
        id: mainfloat
        size_hint_y: None
        height: root.height-22

        Channels:
            id: channels

        Groups:
            id: groups

    Windowborder:

    Group_popup:
        id: grouppopup
        scroll_y: groups.ids.scroll.scroll_y
        cheight: groups.ids.scroll.children[0].height
